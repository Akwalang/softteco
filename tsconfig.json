{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common/classes": [
        "libs/common/src/classes/"
      ],
      "@app/common/classes/*": [
        "libs/common/src/classes/*"
      ],
      "@app/common/entities": [
        "libs/common/src/entities/"
      ],
      "@app/common/entities/*": [
        "libs/common/src/entities/*"
      ],
      "@app/common/middlewares": [
        "libs/common/src/middlewares/"
      ],
      "@app/common/middlewares/*": [
        "libs/common/src/middlewares/*"
      ],
      "@app/common/utils": [
        "libs/common/src/utils/"
      ],
      "@app/common/utils/*": [
        "libs/common/src/utils/*"
      ],
    }
  }
}
